# Maintainer: Truemedian <truemedian at gmail dot com>

pkgname='luvit-git'
pkgver=2.18.0.r0.9841bc17
pkgrel=1
pkgdesc="Lua + libUV + jIT = pure awesomesauce"
arch=('i686' 'x86_64' 'arm' 'armv6h' 'armv7h')
url="https://github.com/luvit/luvit"
license=('Apache')
makedepends=('lit' 'luvi')
provides=('luvit')
source=("git+$url.git")
sha256sums=('SKIP')
options=(!strip)

pkgver() {
    cd "$srcdir/luvit"

    printf "%s" "$(git describe --long | sed 's/\([^-]*-\)g/r\1/;s/-/./g')"
}

build() {
    cd "$srcdir/luvit"

    lit make . luvit "$(which luvi)"
}

package() {
    cd "$srcdir/luvit"

    mkdir -p "$pkgdir/usr/bin"
    install -p luvit "$pkgdir/usr/bin/luvit"
}
